<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<RollingFile name="INSTRUMENTACIO_COMPOSICIO_PDF_LOG" fileName="/data/STD/logs/composicioPDF-instrumentacio-PRO.log" filePattern="/data/STD/logs/%d{ddMMyyyy}_composicioPDF-instrumentacio-PRO.log" append="true">
			<PatternLayout pattern="%m%n"/>
		    <Policies>
		    	<TimeBasedTriggeringPolicy interval="1"/>
		    </Policies>                               
		</RollingFile>
		<RollingFile name="INSTRUMENTATION_CODI_SEGUR_VERIFICACIO_LOG" fileName="/data/STD/logs/codiSegurVerificacio-instrumentacio-PRO.log" filePattern="/data/STD/logs/%d{ddMMyyyy}_codiSegurVerificacio-instrumentacio-PRO.log" append="true">
			<PatternLayout pattern="%m%n"/>
		    <Policies>
		    	<TimeBasedTriggeringPolicy interval="1"/>
		    </Policies>                               
		</RollingFile>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="canigo Message: %d{dd MM yyyy HH:mm:ss,SSS} %-5p [%t] %-5p [%t] %c - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="cat.gencat.ctti" level="error" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Logger name="cat.gencat.ctti.std.composicio.aspect.ComposicioPDFAspectTraceSTD" level="info" additivity="false">
			<AppenderRef ref="INSTRUMENTACIO_COMPOSICIO_PDF_LOG" />
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Logger name="cat.gencat.ctti.std.csv.aspect.CodiSegurVerificacioAspectTraceSTD" level="info" additivity="false">
			<AppenderRef ref="INSTRUMENTATION_CODI_SEGUR_VERIFICACIO_LOG" />
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
